<br>
<h3>RDP Parts</h3>
<br>
{{#each products}}
  <div class="panel panel-default" data-product_id="{{id}}">
    <div class="panel-heading">
      <div class="pull-right">
        <div class="btn-group">
          {{!-- <button class="btn btn-default btn-xs delete-pcr-product">
            <i class="glyphicon glyphicon-trash"></i>
          </button> --}}
          <button class="btn btn-default btn-xs open-pcr-product has-tooltip" title="Open RDP part in new tab">
            Create
            <i class="glyphicon glyphicon-share"></i>
          </button>
          <button class="btn btn-default btn-xs show-pcr-product">Show &rarr;</button>
        </div>
      </div>
      <h3 class="panel-title">{{name}}</h3>
    </div>
    <table class="table table-condensed">
      <thead>
        <th></th>
        <th class="text-right"><small>Size</small></th>
        <th class="text-right"><small>GC content</small></th>
        <th class="text-right"><small>Melting temperature</small></th>
        <th></th>
      </thead>
      <tbody>
        <tr>
          <td><small><strong>Product</strong></small></td>
          <td class="text-right"><small>{{sequenceLength sequence}}bp</small></td>
          <td colspan="3"></td>
        </tr>
        <tr>
          <td><small>Forward annealing region</small></td>
          <td class="text-right"><small>{{sequenceLength forwardPrimer.annealingRegion}}bp</small></td>
          <td class="text-right"><small>{{round forwardPrimer.annealingRegion.gcContent 1 true}}%</small></td>
          <td class="text-right"><small>{{round forwardPrimer.annealingRegion.meltingTemperature 1}}&deg;C</small></td>
          <td></td>
        </tr>
        <tr>
          <td><small>Reverse annealing region</small></td>
          <td class="text-right"><small>{{sequenceLength reversePrimer.annealingRegion}}bp</small></td>
          <td class="text-right"><small>{{round reversePrimer.annealingRegion.gcContent 1 true}}%</small></td>
          <td class="text-right"><small>{{round reversePrimer.annealingRegion.meltingTemperature 1}}&deg;C</small></td>
          <td></td>
        </tr>
        <tr>
          <td><small>{{forwardPrimer.name}}</small></td>
          <td class="text-right"><small>{{sequenceLength forwardPrimer}}bp</small></td>
          <td class="text-right">{{!-- <small>{{round forwardPrimer.gcContent 1 true}}%</small> --}}</td>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td colspan="5" class="sequence">{{{displaySelectableSequence forwardPrimer}}}</td>
        </tr>
        <tr>
          <td><small>{{reversePrimer.name}}</small></td>
          <td class="text-right"><small>{{sequenceLength reversePrimer}}bp</small></td>
          <td class="text-right">{{!-- <small>{{round reversePrimer.gcContent 1 true}}%</small> --}}</td>
          <td colspan="3"></td>
        </tr>
        <tr>
          <td colspan="5" class="sequence">{{{displaySelectableSequence reversePrimer}}}</td>
        </tr>
        <tr>
          <td><small>Sticky ends</small></td>
          <td colspan="3" class="text-right"><small>{{stickyEnds.name}}</small></td>
          <td></td>
        </tr>

      </tbody>
    </table>
  </div>
{{/each}}
<button class="show-new-pcr-product-form btn btn-primary">
  Create new RDP Part
</button>